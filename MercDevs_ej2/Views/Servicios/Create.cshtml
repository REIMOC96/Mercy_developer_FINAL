@model MercDevs_ej2.Models.Servicio

@{
    ViewData["Title"] = "Create";
}

<h1>Crear servicio</h1>

<h4>Servicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campos para el Servicio -->
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sku" class="control-label"></label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>

            <!-- Campos para Descripciones del Servicio -->
            <h4 class="mt-3">Descripciones del Servicio</h4>
            <div id="descripcionContainer">
                <div class="form-group">
                    <label for="Descripcion">Descripción</label>
                    <input type="text" class="form-control" name="Descripcionservicios[0].TextoDescripcion" />
                </div>
            </div>

            <!-- Botón para agregar más descripciones -->
            <button type="button" id="addDescriptionBtn" class="btn btn-primary">Agregar Descripción</button>

            <!-- Botón para enviar el formulario -->
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button class="btn btn-secondary">Volver a la lista</button></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Contador para las descripciones
        let descripcionCount = 1;

        // Función para agregar un nuevo campo de descripción
        document.getElementById("addDescriptionBtn").onclick = function() {
            const descripcionContainer = document.getElementById("descripcionContainer");

            const newDescription = document.createElement("div");
            newDescription.classList.add("form-group");
            newDescription.innerHTML = `
                <label for="Descripcion">Descripción</label>
                <input type="text" class="form-control" name="Descripcionservicios[${descripcionCount}].TextoDescripcion" />
            `;

            descripcionContainer.appendChild(newDescription);
            descripcionCount++;
        };
    </script>
}
