@model MercDevs_ej2.Models.Servicio

@{
    ViewData["Title"] = "Delete";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h1>Eliminar</h1>

<h3>¿estas seguro de que quieres eliminar esto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sku)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sku)
        </dd>
        <dt class = "col-sm-2">
            ID usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioIdUsuarioNavigation.IdUsuario)
        </dd>
    </dl>

    @{
        var errorMessage = TempData["ErrorMessage"] as string;
        var successMessage = TempData["SuccessMessage"] as string;
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            Swal.fire("Error", "@errorMessage", "error");
        </script>
    }
    <div class="mt-4 d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdServicio" />
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="bi bi-x-circle"></i> Confirmar Eliminación
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
