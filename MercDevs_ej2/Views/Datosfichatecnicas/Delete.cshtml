@model MercDevs_ej2.Models.Datosfichatecnica

@{
    ViewData["Title"] = "Eliminar Ficha Técnica";
}

<div class="container mt-6" style="max-width: 800px;">
    <h1 class="text-center mb-4">Eliminar Ficha Técnica</h1>

    <h3 class="mb-4 text-black text-center">
        ¿Estás seguro de eliminar este registro?
    </h3>

    <table class="table table-bordered table-m">
        <tbody>
            <tr>
                <th scope="row" class="text-start">Fecha de Inicio</th>
                <td class="text-center">@Html.DisplayFor(model => model.FechaInicio)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Fecha de Término</th>
                <td class="text-center">@Html.DisplayFor(model => model.FechaFinalizacion)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Nombre Cliente</th>
                <td class="text-center">@Html.DisplayFor(model => model.RecepcionEquipo.IdClienteNavigation.Nombre)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Nombre Servicio</th>
                <td class="text-center">@Html.DisplayFor(model => model.RecepcionEquipo.IdServicioNavigation.Nombre)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Observaciones || Recomendaciones</th>
                <td class="text-center">@Html.DisplayFor(model => model.PobservacionesRecomendaciones)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Sistema Operativo</th>
                <td class="text-center">
                    @{
                        string soinstalado = Model.Soinstalado switch
                        {
                            0 => "Windows 10",
                            1 => "Windows 11",
                            2 => "Linux",
                            _ => "Desconocido"
                        };
                        @soinstalado
                    }
                </td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Sistema Office Instalado</th>
                <td class="text-center">
                    @{
                        string suiteofficeinstalada = Model.Soinstalado switch
                        {
                            0 => "Microsoft Office 2013",
                            1 => "Microsoft Office 2019",
                            2 => "Microsoft Office 365",
                            3 => "OpenOffice",
                            _ => "Desconocido"
                        };
                        @suiteofficeinstalada
                    }
                </td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Lector PDF</th>
                <td class="text-center">
                    @{
                        string lectorpdfinstalado = Model.Soinstalado switch
                        {
                            0 => "No Instalado",
                            1 => "Instalado",
                            2 => "No Aplica",
                            _ => "Desconocido"
                        };
                        @lectorpdfinstalado
                    }
                </td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Navegador Web</th>
                <td class="text-center">
                    @{
                        string navegadorwebinstalado = Model.NavegadorWebInstalado switch
                        {
                            0 => "No Instalado",
                            1 => "Chrome",
                            2 => "Chrome y Firefox",
                            _ => "Desconocido"
                        };
                        @navegadorwebinstalado
                    }
                </td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Antivirus</th>
                <td class="text-center">@Html.DisplayFor(model => model.AntivirusInstalado)</td>
            </tr>
        </tbody>
    </table>

    <!-- Mostrar el mensaje de error si se pasa en TempData -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="mt-4 d-flex justify-content-between">
        <!-- Formulario de eliminación -->
        <form asp-action="Delete" method="post">
            <!-- Campo oculto con el Id de la ficha técnica -->
            <input type="hidden" asp-for="IdDatosFichaTecnica" value="@Model.IdDatosFichaTecnica" />

            <button type="submit" class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </form>

        <!-- Botón para regresar -->
        <button class="btn btn-secondary btn-sm" onclick="window.history.back();">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </button>
    </div>
</div>
