@model MercDevs_ej2.Models.Datosfichatecnica

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Datos ficha técnica</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDatosFichaTecnica" />

            <!-- Tabla para organizar los campos -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-3">Campo</th>
                        <th class="col-md-9">Valor</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Campo para Fecha de Inicio -->
                    <tr>
                        <td><label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label></td>
                        <td>
                            <input asp-for="FechaInicio" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </td>
                    </tr>

                    <!-- Campo para Fecha de Finalización -->
                    <tr>
                        <td><label asp-for="FechaFinalizacion" class="control-label">Fecha de Finalización</label></td>
                        <td>
                            <input asp-for="FechaFinalizacion" class="form-control" />
                            <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                        </td>
                    </tr>

                    <!-- Campo para Observaciones/Recomendaciones -->
                    <tr>
                        <td><label asp-for="PobservacionesRecomendaciones" class="control-label">Observaciones/Recomendaciones</label></td>
                        <td>
                            <input asp-for="PobservacionesRecomendaciones" class="form-control" />
                            <span asp-validation-for="PobservacionesRecomendaciones" class="text-danger"></span>
                        </td>
                    </tr>

                    <!-- Campo para sistema operativo Instalado -->
                    <tr>
                        <td><label asp-for="Soinstalado" class="control-label">Sistema operativo</label></td>
                        <td>
                            <select asp-for="Soinstalado" class="form-control">
                                <option value="" disabled selected>-- Seleccione el tipo sistema operativo --</option>
                                <option value="0">Windows 10</option>
                                <option value="1">Windows 11</option>
                                <option value="2">Linux</option>
                                <option value="3">Otros...</option>
                            </select>
                            <span asp-validation-for="Soinstalado" class="text-danger"></span>
                        </td>
                    </tr>


                    <!-- Campo para Suite Office Instalado -->
                    <tr>
                        <td><label asp-for="SuiteOfficeInstalada" class="control-label">Suite office instalada</label></td>
                        <td>
                            <select asp-for="SuiteOfficeInstalada" class="form-control">
                                <option value="" disabled selected>-- Seleccione la suite office instalada --</option>
                                <option value="0">Microsoft office 2013</option>
                                <option value="1">Microsoft office 2019</option>
                                <option value="2">Microsoft office 365</option>
                                <option value="3">Open office</option>
                                <option value="4">Otro..</option>
                                <option value="5">No instalado</option>

                            </select>
                            <span asp-validation-for="SuiteOfficeInstalada" class="text-danger"></span>
                        </td>
                    </tr>


                    <!-- Campo para Lector PDF Instalado -->
                    <tr>
                        <td><label asp-for="LectorPdfinstalado" class="control-label">Suite office instalada</label></td>
                        <td>
                            <select asp-for="LectorPdfinstalado" class="form-control">
                                <option value="" disabled selected>-- Seleccione el Lector Pdf instalado --</option>
                                <option value="0">no instalado</option>
                                <option value="1">Instalado</option>
                                <option value="2">No aplica</option>
 

                            </select>
                            <span asp-validation-for="LectorPdfinstalado" class="text-danger"></span>
                        </td>
                    </tr>


                    <!-- Campo para Navegador Web Instalado -->
                    <tr>
                        <td><label asp-for="NavegadorWebInstalado" class="control-label">Suite office instalada</label></td>
                        <td>
                            <select asp-for="LectorPdfinstalado" class="form-control">
                                <option value="" disabled selected>-- Seleccione el Navegador Web Instalado --</option>
                                <option value="0">no instalado</option>
                                <option value="1">Chrome</option>
                                <option value="2">No aplica</option>


                            </select>
                            <span asp-validation-for="LectorPdfinstalado" class="text-danger"></span>
                        </td>
                    </tr>


                    <!-- Campo para Antivirus Instalado -->
                    <tr>
                        <td><label asp-for="AntivirusInstalado" class="control-label">Antivirus Instalado</label></td>
                        <td>
                            <input asp-for="AntivirusInstalado" class="form-control" />
                            <span asp-validation-for="AntivirusInstalado" class="text-danger"></span>
                        </td>
                    </tr>
                    <!-- Campo para Estado-->
                    <tr>
                        <td><label asp-for="Estado" class="control-label"></label></td>
                        <td>
                            <select asp-for="Estado" class="form-control">
                                <option value="" disabled selected>-- Seleccione el Estado --</option>
                                <option value="0">Finalizado</option>
                                <option value="1">Recepcionado</option>
                                <option value="2">En espera</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </td>
                    </tr>

                    <!-- Dropdown para Recepción de Equipo -->
                    <tr>
                        <td><label asp-for="RecepcionEquipoId" class="control-label">Recepción de Equipo</label></td>
                        <td>
                            <select asp-for="RecepcionEquipoId" class="form-control" asp-items="ViewBag.RecepcionEquipoId"></select>
                            <span asp-validation-for="RecepcionEquipoId" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <!-- Botón Guardar -->
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-secondary" onclick="window.history.back();">Volver a la lista</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
