@section Scripts {
    <script>
        $(document).ready(function () {
            $("#btnEnviar").click(function (e) {
                e.preventDefault(); // Previene el comportamiento predeterminado del botón, asi evito que redireccione a una pagina 

                var fichaId = @Model.IdDatosFichaTecnica; //se hace una ejecucion ajax para manejar el comportamiento del boton ademas de enviar un aviso de correo enviado


                $.ajax({
                    url: '@Url.Action("EnviarPdf", "Datosfichatecnicas")',
                    type: 'POST',
                    data: { id: fichaId },
                    success: function (response) {
                        if (response.success) {
                            alert("El correo se ha enviado correctamente.");
                        } else {
                            alert("Error: " + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Proporciona información más detallada en caso de error
                        alert("Error al enviar la ficha técnica: " + xhr.responseText);
                    }
                });
            });
        });
    </script>
}


