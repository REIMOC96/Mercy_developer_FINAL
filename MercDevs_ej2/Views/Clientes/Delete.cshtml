@model MercDevs_ej2.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<div class="container mt-6" style="max-width: 800px;">
    <h1 class="text-center text-danger mb-4">Eliminar Cliente</h1>

    <h3 class="text-center text-black">¿Estás seguro de que deseas eliminar este cliente?</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="2">
                    <h5 class="text-center text-danger mb-2">Recuerde leer detenidamente antes de eliminar algo.</h5>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row" class="text-start">Nombre</th>
                <td class="text-center">@Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Apellido</th>
                <td class="text-center">@Html.DisplayFor(model => model.Apellido)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Correo</th>
                <td class="text-center">@Html.DisplayFor(model => model.Correo)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Teléfono</th>
                <td class="text-center">@Html.DisplayFor(model => model.Telefono)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Dirección</th>
                <td class="text-center">@Html.DisplayFor(model => model.Direccion)</td>
            </tr>
            <tr>
                <th scope="row" class="text-start">Estado</th>
                <td class="text-center">
                    @{
                        string Estado = "";
                        switch (Model.Estado)
                        {
                            case 0:
                                Estado = "Inactivo";
                                break;
                            case 1:
                                Estado = "Activo";
                                break;
                            case 2:
                                Estado = "En espera";
                                break;
                        }
                        @Estado
                    }
                </td>
            </tr>
        </tbody>
    </table>

    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <script>
            Swal.fire("Error", "@TempData["ErrorMessage"]", "error");
        </script>
    }

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left-circle"></i> Volver a la lista
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        const passwordInput = document.getElementById('passwordInput');
        const passwordIcon = this.querySelector('i');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            passwordIcon.classList.replace('bi-eye', 'bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            passwordIcon.classList.replace('bi-eye-slash', 'bi-eye');
        }
    });
</script>
