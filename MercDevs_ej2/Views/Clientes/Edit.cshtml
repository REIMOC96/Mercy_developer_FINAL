@model MercDevs_ej2.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Clientes</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCliente" />

            @* Grupo de validación y entrada de Nombre *@
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            @* Grupo de validación y entrada de Apellido *@
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" placeholder="Ingrese Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            @* Grupo de validación y entrada de Correo *@
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" maxlength="10" placeholder="Maximo de 10 N°" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            @* Grupo de validación y entrada de Teléfono *@
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            @* Grupo de validación y entrada de Dirección *@
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese Direcion" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            @* Grupo de validación y selección de Estado *@
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="0">Inactivo</option>
                    <option value="1">Activo</option>
                    <option value="2">En espera</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            @* Botón de envío *@
            <div class="form-group">
                <input type="submit" value="guardar cambios" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button class="btn btn-secondary">volver a la lista</button></a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
