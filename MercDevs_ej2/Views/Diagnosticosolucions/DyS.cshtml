@model IEnumerable<MercDevs_ej2.Models.Diagnosticosolucion>

@{
    ViewData["Title"] = "Index";
}

<h1>Diagnóstico y Solución por Datos de Ficha Técnica</h1>

<p>
    <a asp-action="CrearPorDatos" asp-route-id="@ViewBag.DatosFichaTecnicaId">
        <button type="button" class="btn btn-success">Crear Diagnóstico-Solución</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descripción Diagnóstico</th>
            <th>Descripción Solución</th>
            <th>Id Ficha Técnica</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DescripcionDiagnostico)</td>
                <td>@Html.DisplayFor(modelItem => item.DescripcionSolucion)</td>
                <td>@item.DatosFichaTecnicaId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDiagnosticoSolucion">
                        <button type="button" class="btn btn-primary">Editar</button>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdDiagnosticoSolucion">
                        <button type="button" class="btn btn-info">Detalles</button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdDiagnosticoSolucion">
                        <button type="button" class="btn btn-danger">Borrar</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
